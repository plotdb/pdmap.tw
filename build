#!/usr/bin/env bash
mkdir -p dist
echo "build src/twmap.ls -> dist/twmap.js ..."
./node_modules/.bin/lsc -cbp src/twmap.ls > dist/twmap.js
echo "minifying twmap.js ..."
./node_modules/.bin/uglifyjs dist/twmap.js > dist/twmap.min.js
echo "deploy into local web ..."
mkdir -p web/static/assets/lib/twmap/
cp -R dist/* web/static/assets/lib/twmap/
echo "done."
